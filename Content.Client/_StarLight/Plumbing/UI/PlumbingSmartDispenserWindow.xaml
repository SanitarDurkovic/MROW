<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               MinSize="320 450"
               Title="{Loc plumbing-smart-dispenser-window-title}">
    <BoxContainer Orientation="Vertical" Margin="5 5 5 5" SeparationOverride="4">
        <!-- Header -->
        <Label Text="{Loc plumbing-smart-dispenser-header}" StyleClasses="LabelHeading"
               HorizontalAlignment="Center" Margin="0 0 0 4" />

        <PanelContainer StyleClasses="LowDivider" />

        <!-- Reagent list -->
        <ScrollContainer VerticalExpand="True" HorizontalExpand="True" MinHeight="300">
            <BoxContainer Name="ReagentList" Orientation="Vertical" HorizontalExpand="True"
                          SeparationOverride="2" />
        </ScrollContainer>

        <!-- Footer -->
        <PanelContainer StyleClasses="LowDivider" />
        <Label Name="StatusLabel" StyleClasses="WindowFooterText"
               HorizontalAlignment="Center" Margin="0 2 0 0" />
    </BoxContainer>
</DefaultWindow>
