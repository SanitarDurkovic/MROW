<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               MinSize="350 300" Title="{Loc plumbing-filter-window-title}">
    <BoxContainer Orientation="Vertical" Margin="5 5 5 5" SeparationOverride="8">
        <!-- Status toggle -->
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <Label Text="{Loc plumbing-filter-status}" />
            <Button Name="ToggleStatusButton" MinWidth="80" />
        </BoxContainer>

        <!-- Add reagent section -->
        <PanelContainer StyleClasses="LowDivider" />
        <Label Text="{Loc plumbing-filter-add-reagent}" StyleClasses="LabelHeading" />
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True" SeparationOverride="5">
            <LineEdit Name="ReagentIdInput" PlaceHolder="{Loc plumbing-filter-reagent-id}" HorizontalExpand="True" />
            <Button Name="AddReagentButton" Text="{Loc plumbing-filter-add}" MinWidth="50" />
        </BoxContainer>
        <ItemList Name="SuggestionList" SelectMode="Single" MinHeight="80" MaxHeight="120" HorizontalExpand="True" Visible="False" />

        <!-- Filtered reagents list -->
        <PanelContainer StyleClasses="LowDivider" />
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc plumbing-filter-filtered}" StyleClasses="LabelHeading" HorizontalExpand="True" />
            <Button Name="ClearButton" Text="{Loc plumbing-filter-clear}" MinWidth="60" />
        </BoxContainer>
        <ItemList Name="FilteredList" SelectMode="Single" VerticalExpand="True" MinHeight="100" />
        <Button Name="RemoveButton" Text="{Loc plumbing-filter-remove-selected}" Disabled="True" />
    </BoxContainer>
</DefaultWindow>
